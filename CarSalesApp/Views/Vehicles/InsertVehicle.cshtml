@model Vehicles

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Create a New Vehicle Listing</h2>

    @using (Html.BeginForm("InsertVehicleToDatabase", "Vehicles", "Post"))
    {
        <input asp-for="Vehicle_ID" type="hidden" value="" />

        <div class="form-group">
            <label for="">Select a Make</label>
            <select class="form-control" name="Make" value="">
                @foreach (var car in Model.Makes)
                {
                    <option value="@car.Title">@car.Title </option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="">Select a Model</label>
            <select class="form-control" name="Model" value="">
                @foreach (var car in Model.Models)
                {
                    <option value="@car.Title">@car.Title </option>
                }
            </select>
        </div>
        <label asp-for="Year" class="control-label">Year</label>
        <input type="text" name="Year" class="form-control" value="" />
        <label asp-for="Mileage" class="control-label">Mileage</label>
        <input type="text" name="Mileage" class="form-control" value="" />
        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control" />
        <label asp-for="Color" class="control-label">Color</label>
        <input type="text" name="Color" class="form-control" value="" />
        <br />
        <br />
        <input type="submit" value="Create Vehicle" class="btn btn-primary" />
    }
    </body>
</html>



   



