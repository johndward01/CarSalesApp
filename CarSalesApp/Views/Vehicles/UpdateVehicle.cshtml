@model Vehicles

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>Update @Model.Make @Model.Model</h2>

    @using (Html.BeginForm("UpdateVehicleToDatabase", "Vehicles", "Post"))
    {
        <input asp-for="Vehicle_ID" type="hidden" value="@Model.Vehicle_ID" />

        <label asp-for="Make" class="control-label">Make</label>

        <input type="text" name="Make" class="form-control" value="@Model.Make" />

        <label asp-for="Model" class="control-label">Model</label>

        <input type="text" name="Model" class="form-control" value="@Model.Model" />

        <label asp-for="Price" class="control-label">Price</label>

        <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

        <label asp-for="Mileage" class="control-label">Mileage</label>

        <input type="text" name="Mileage" class="form-control" value="@Model.Mileage" />

        <br />

        <input type="submit" value="Update Vehicle" class="btn btn-primary" />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />


    }
</body>
</html>




